{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "esModuleInterop": true,
      "typeRoots": [
          "../node_modules/@types"
      ],
      "types": [
          "node"
      ]
  },
  "include": [
      "src/**/*.ts",
      "src/*.ts",
      "*.ts"
  ],
  "exclude": [
      "node_modules"
  ],
  "compileOnSave": true,
  "buildOnSave": true
}